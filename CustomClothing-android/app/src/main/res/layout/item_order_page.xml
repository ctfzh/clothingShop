<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="180dp"
              android:orientation="horizontal"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/shop_main_img_size_w"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_order_page_img"
            android:layout_width="@dimen/shop_main_img_size_w"
            android:layout_height="@dimen/shop_main_img_size_h"/>

        <TextView
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/big_edittext_bg"
            android:textSize="@dimen/text_size_small"
            android:layout_marginTop="5dp"
            android:padding="@dimen/text_padding_half"
            android:gravity="center"
            android:text="立即评价"
            android:id="@+id/iv_order_page_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_page_order_no"
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_weight="5"
                android:text="订单编号"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_page_shopTag"
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_weight="1"
                android:text="商品名\n"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_width="wrap_content"
                android:text="商家电话:"/>

            <TextView
                android:layout_width="wrap_content"
                android:autoLink="phone"
                android:id="@+id/tv_order_page_sale_id"
                style="@style/AppTheme.TextViewMulLinesInH"
                android:text="15071485690"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_page_order_status"
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_weight="1"
                android:text="商品状态"
                />

            <TextView
                android:id="@+id/tv_order_page_order_money"
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="价格"
                android:textColor="@color/colorPrimaryRed"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_page_uploadTime"
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="提交日期"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/text_view_bg"
                android:gravity="center"
                android:text="胸围"
                android:textSize="@dimen/text_size_xsmall"/>

            <TextView
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/text_view_bg"
                android:gravity="center"
                android:text="腰围"
                android:textSize="@dimen/text_size_xsmall"/>

            <TextView
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/text_view_bg"
                android:gravity="center"
                android:text="臀围"
                android:textSize="@dimen/text_size_xsmall"/>

            <TextView
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/text_view_bg"
                android:gravity="center"
                android:text="手长"
                android:textSize="@dimen/text_size_xsmall"/>

            <TextView
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/text_view_bg"
                android:gravity="center"
                android:text="脚长"
                android:textSize="@dimen/text_size_xsmall"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_page_bust"
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/text_view_bg"
                android:gravity="center"
                android:text="胸围"
                android:textSize="@dimen/text_size_xsmall"/>

            <TextView
                android:id="@+id/tv_order_page_waist"
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/text_view_bg"
                android:gravity="center"
                android:text="腰围"
                android:textSize="@dimen/text_size_xsmall"/>

            <TextView
                android:id="@+id/tv_order_page_hip"
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/text_view_bg"
                android:gravity="center"
                android:text="臀围"
                android:textSize="@dimen/text_size_xsmall"/>

            <TextView
                android:id="@+id/tv_order_page_hand"
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/text_view_bg"
                android:gravity="center"
                android:text="手长"
                android:textSize="@dimen/text_size_xsmall"/>

            <TextView
                android:id="@+id/tv_order_page_leg"
                style="@style/AppTheme.TextViewMulLinesInH"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/text_view_bg"
                android:gravity="center"
                android:text="脚长"
                android:textSize="@dimen/text_size_xsmall"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>