<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_my_order"
              style="@style/AppTheme.ItemLinear"
              android:layout_height="@dimen/my_item_head_size"
              android:background="@drawable/item_pressed_bg"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal"
    >

    <TextView
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:id="@+id/tv_item_left_title"
        style="@style/AppTheme.TextViewStyleBlack"
        android:layout_weight="1"
        android:text="@string/my_order"
        />

    <TextView
        android:id="@+id/tv_item_right_title"
        style="@style/AppTheme.TextViewStyleBlack"
        android:layout_weight="1"
        android:gravity="right"
        android:text="@string/see_more_order"
        android:textColor="@color/text_color_grey"
        android:textSize="@dimen/text_size_small"
        />

    <ImageView
        android:id="@+id/iv_item_right_icon"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:layout_width="@dimen/ic_open_more"
        android:layout_height="@dimen/ic_open_more"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_open_more"/>

</LinearLayout>